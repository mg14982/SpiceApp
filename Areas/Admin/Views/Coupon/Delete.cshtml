@model Coupon
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Coupon</h2>

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <div class="form-group row">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" style="width:100%;" />
            }
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Name" readonly />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" id="couponImage" name="files" multiple class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select id="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control" asp-for="CouponType" disabled="disabled"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Discount" readonly />
            </div>
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="MinimumAmount" readonly />
            </div>
            <span class="text-danger" asp-validation-for="MinimumAmount"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="isActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" class="form-control" asp-for="isActive" disabled="disabled" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListPartial" model="@Model.Id" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}